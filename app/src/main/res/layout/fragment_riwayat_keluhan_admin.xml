<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.admin.AdminRiwayatKeluhanFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnHistoryAll"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/roboto"
                    android:text="Semua"
                    android:textAllCaps="false"
                    android:textColor="@color/primary_text"
                    android:textSize="13sp"
                    app:backgroundTint="@color/white_text"
                    app:cornerRadius="6dp"
                    app:strokeColor="@color/primary"
                    app:strokeWidth="1dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnHistoryProses"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/roboto"
                    android:text="Diproses"
                    android:textAllCaps="false"
                    android:textColor="@color/secondary_text"
                    android:textSize="13sp"
                    app:backgroundTint="@color/white_text"
                    app:cornerRadius="6dp"
                    app:strokeColor="@color/white_text"
                    app:strokeWidth="1dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnHistoryDone"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/roboto"
                    android:text="Selesai"
                    android:textAllCaps="false"
                    android:textColor="@color/secondary_text"
                    android:textSize="13sp"
                    app:backgroundTint="@color/white_text"
                    app:cornerRadius="6dp"
                    app:strokeColor="@color/white_text"
                    app:strokeWidth="1dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnHistoryReject"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/roboto"
                    android:text="Ditolak"
                    android:textAllCaps="false"
                    android:textColor="@color/secondary_text"
                    android:textSize="13sp"
                    app:backgroundTint="@color/white_text"
                    app:cornerRadius="6dp"
                    app:strokeColor="@color/white_text"
                    app:strokeWidth="1dp" />
            </LinearLayout>
        </HorizontalScrollView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvHistoryKeluhanUser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/list_aduan_admin" />
    </LinearLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>